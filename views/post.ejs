<!DOCTYPE html>
<html lang="en">

<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto t-alg-center">
          <div class="post-heading">
            <h1><%= postid.title %></h1>
           
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto t-alg-center">
          <p><%= postid.description %></p>

        
        </div>
      </div>
    </div>
  </article>

  <hr>

  <article>
    <div class="container">
      <div class="row">
        <div class="col-md-4 mx-auto t-alg-center bg-info">
          <a href="/postupdate/<%= postid._id %>">UPDATE</a>

        
        </div>
        <div class="col-md-4 mx-auto t-alg-center bg-danger">
          <a onclick="return confirm('ARE YOU SURE?')" href="/postdelete/<%= postid._id %>?_method=DELETE">DELETE</a>

        
        </div>
      </div>
    </div>
  </article>
  <!-- Footer -->
  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
